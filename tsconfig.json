{
  "compilerOptions": {
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "lib": ["es6"],
    "module": "commonjs",
    "target": "es2017",
    "outDir": "./lib",
    "rootDir": "./src",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "typeRoots": ["typings"],
  },
  "include": ["./src"],
  "exclude": ["node_modules", "**/*.spec.ts", "**/__mocks__"]
}
